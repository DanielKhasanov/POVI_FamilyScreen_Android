<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_height="wrap_content"

    android:background="@color/colorBackgroundLight">

    <TextView
        android:id="@+id/family_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textColor="@color/colorBackgroundLight"
        android:background="@color/colorAccent"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/family_member_scroll"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/family_name">

    </android.support.v7.widget.RecyclerView>


    <ImageButton
        android:id="@+id/button_add_family_member"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_add_circle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignBottom="@id/family_member_scroll"
        android:layout_toRightOf="@id/family_member_scroll"
        />

    <TextView
        android:id="@+id/number_members"
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#111111"
        android:textStyle="bold"
        android:layout_below="@id/family_member_scroll"/>

</RelativeLayout>